<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ucd.pepeclub.exerciseapp.MainMenu"
    tools:showIn="@layout/activity_main_menu">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:gravity="center"
        android:text="LOGO"
        android:textSize="35sp" />

    <Button
        android:id="@+id/runTracker_button"
        android:layout_width="174dp"
        android:layout_height="71dp"
        android:text="Exercise Monitor"
        android:textSize="17sp"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="356dp" />

    <Button
        android:id="@+id/friends_button"
        android:layout_width="174dp"
        android:layout_height="71dp"
        android:baselineAligned="false"
        android:text="Leaderboards"
        android:textAllCaps="false"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/achievements_button"
        android:layout_width="174dp"
        android:layout_height="71dp"
        android:baselineAligned="false"
        android:text="Achievements"
        android:textAllCaps="false"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/logout_facebook_button"
        android:layout_width="174dp"
        android:layout_height="71dp"
        android:text="Logout"
        android:textAllCaps="false"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="16dp" />


</LinearLayout>
